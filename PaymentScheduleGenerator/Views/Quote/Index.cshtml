@model PaymentScheduleGenerator.Domain.CreatePaymentScheduleCommand

<h1>Create a new quote</h1>

<form asp-controller="Quote" asp-action="Index" method="post">
    <div class="row mb-3">
        <label asp-for="VehiclePrice" class="col-sm-2 col-form-label">Vehicle Price</label>
        <div class="input-group col-sm-8">
            <div class="input-group-prepend">
                <span class="input-group-text">&pound;</span>
            </div>
            <input asp-for="VehiclePrice" type="number" step="0.01" class="form-control" aria-label="Vehicle Price (in pounds and pence)" />
        </div>
        <span asp-validation-for="VehiclePrice" class="col-sm-2 text-danger"></span>
    </div>

    <div class="row mb-3">
        <label asp-for="Deposit" class="col-sm-2 col-form-label">Deposit</label>
        <div class="input-group col-sm-8">
            <div class="input-group-prepend">
                <span class="input-group-text">&pound;</span>
            </div>
            <input asp-for="Deposit" type="number" step="0.01" class="form-control" aria-label="Deposit (in pounds and pence)" />
        </div>
        <span asp-validation-for="Deposit" class="col-sm-2 text-danger"></span>
    </div>

    <div class="row mb-3">
        <label asp-for="DeliveryDate" class="col-sm-2 col-form-label">Delivery Date</label>
        <div class="col-sm-8">
            <input asp-for="DeliveryDate" type="date" class="form-control" />
        </div>
        <span asp-validation-for="DeliveryDate" class="col-sm-2 text-danger"></span>
    </div>

    <div class="row mb-3">
        <label asp-for="TermInMonths" class="col-sm-2 col-form-label">Finance Term</label>
        <select asp-for="TermInMonths" class="custom-select col-sm-8" aria-label="Default select example">
            <option value="12">12 Months</option>
            <option value="24">24 Months</option>
            <option value="36">36 Months</option>
        </select>
        <span asp-validation-for="TermInMonths" class="col-sm-2 text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>

